{
  "name": "manuscripts",
  "version": "1.0.0",
  "description": "manuscripts app",
  "main": "index.js",
  "repository": "git@github.com:khirayama/manuscripts.git",
  "author": "khirayama",
  "license": "MIT",
  "private": "true",
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "start": "npm run production",
    "production": "NODE_ENV=production npm run clean && npm run compile:scripts && npm run build:styles && npm run copy:files && npm run server",
    "development": "NODE_ENV=development npm run clean && npm run compile:scripts && npm run build:styles && npm run copy:files && (npm run compile:scripts:watch & npm run watch:styles & npm run server:watch)",
    "server": "node dist/index.js",
    "server:watch": "nodemon --config .nodemonrc.json dist/index.js",
    "clean": "rm -rf dist",
    "copy:files": "cpx 'src/**/*.json' dist",
    "compile:scripts": "babel src --out-dir dist",
    "compile:scripts:watch": "babel src --out-dir dist -w --source-maps inline",
    "build:styles": "postcss -c .postcssrc.js",
    "watch:styles": "postcss -c .postcssrc.js -w",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles",
    "lint:scripts": "eslint --ignore-path .gitignore src",
    "lint:scripts:fix": "eslint --ignore-path .gitignore --fix src",
    "lint:styles": "stylelint --config .stylelintrc src/**/*.css",
    "db:create": "mysql -u root < src/config/db.sql",
    "db:migrate": "sequelize db:migrate --config src/config/config.js",
    "migration:create": "sequelize migration:create --config src/config/config.js --name"
  },
  "dependencies": {
    "body-parser": "^1.16.0",
    "cheerio-httpcli": "^0.6.10",
    "cssnano": "^3.10.0",
    "express": "^4.14.0",
    "mysql": "^2.13.0",
    "normalize-url": "^1.9.0",
    "postcss-cli": "^2.6.0",
    "postcss-easy-import": "^2.0.0",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^3.0.0",
    "postcss-simple-vars": "^3.0.0",
    "pug": "^2.0.0-beta9",
    "sequelize": "^3.30.0",
    "sequelize-cli": "^2.5.1",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "cpx": "^1.5.0",
    "eslint": "^3.14.1",
    "eslint-config-xo-space": "^0.15.0",
    "nodemon": "^1.11.0"
  }
}
